---
import Layout from "../layouts/Layout.astro";

const customTitle = "404 - Page Not Found";
const customDescription = "The page you are looking for does not exist.";
const customImage = "/assets/404.webp";
---

<Layout title={customTitle} description={customDescription} image={customImage}>
  <div
    class="relative min-h-[80vh] flex flex-col items-center justify-center text-center px-6 overflow-hidden"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/20 blur-[100px] rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute top-1/4 left-1/4 w-32 h-32 bg-purple-500/10 blur-[50px] rounded-full"
      >
      </div>
      <div
        class="absolute bottom-1/4 right-1/4 w-40 h-40 bg-pink-500/10 blur-[50px] rounded-full"
      >
      </div>
    </div>

    <div class="relative z-10 space-y-6">
      <h1
        class="text-9xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600"
      >
        404
      </h1>

      <div class="space-y-2">
        <h2 class="text-2xl md:text-3xl font-bold text-white">
          Page Not Found
        </h2>
        <p class="text-gray-400 max-w-md mx-auto">
          Oops! The page you're looking for seems to have wandered off into the
          void.
        </p>
      </div>

      <div class="pt-8">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-8 py-3 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition-transform hover:scale-105 active:scale-95"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
            ></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg
          >
          Back Home
        </a>
      </div>
    </div>
  </div>
</Layout>
