---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Showcase from "../components/Showcase.astro";
import { ArrowRight } from "lucide-react";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <Hero />
  <section
    id="about"
    class="min-h-[50vh] flex items-center justify-center py-20 px-6"
  >
    <div class="max-w-5xl mx-auto w-full">
      <div
        class="relative bg-[#1a1a1a] rounded-3xl p-8 md:p-12 overflow-hidden border border-white/5 shadow-2xl group hover:border-white/10 transition-colors duration-500"
      >
        <!-- Background decorative elements -->
        <div class="absolute top-0 right-0 p-12 opacity-5">
          <svg
            width="200"
            height="200"
            viewBox="0 0 24 24"
            fill="none"
            class="text-white transform rotate-12 scale-150"
          >
            <path
              d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <circle
              cx="12"
              cy="7"
              r="4"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></circle>
          </svg>
        </div>

        <div
          class="relative z-10 flex flex-col md:flex-row gap-12 items-center"
        >
          <div class="flex-1 space-y-6 text-center md:text-left">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 text-blue-400 text-sm font-medium"
            >
              <span class="w-2 h-2 rounded-full bg-blue-400 animate-pulse"
              ></span>
              Who am I?
            </div>

            <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight">
              Creator, Developer, <br />
              <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
                >Blender Enthusiast</span
              >
            </h2>

            <p class="text-lg text-gray-400 leading-relaxed">
              Hello! I'm Mozi. From system maintenance to crafting immersive 3D
              animations and Minecraft content, I love building things that help
              the community.
            </p>

            <div class="pt-4">
              <a
                href="/about"
                class="inline-flex items-center gap-2 px-6 py-3 bg-white text-black font-semibold rounded-full hover:bg-gray-200 transition-all hover:scale-105 active:scale-95 group"
              >
                Read Full Bio
                <ArrowRight
                  className="w-5 h-5 transition-transform group-hover:translate-x-1"
                />
              </a>
            </div>
          </div>

          <!-- Visual statistics or highlights -->
          <div class="w-full md:w-auto grid grid-cols-2 gap-4">
            <div
              class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm text-center"
            >
              <div class="text-3xl font-bold text-white mb-1">Blender</div>
              <div class="text-xs text-gray-500 uppercase tracking-wider">
                Animation & Rigs
              </div>
            </div>
            <div
              class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm text-center"
            >
              <div class="text-3xl font-bold text-white mb-1">Minecraft</div>
              <div class="text-xs text-gray-500 uppercase tracking-wider">
                Content Creation
              </div>
            </div>
            <div
              class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm text-center col-span-2"
            >
              <div class="text-3xl font-bold text-white mb-1">Tools</div>
              <div class="text-xs text-gray-500 uppercase tracking-wider">
                Like Text2Arch
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Showcase />
</Layout>
