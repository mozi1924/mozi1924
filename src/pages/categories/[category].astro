---
import Layout from "../../layouts/Layout.astro";
import ArticleList from "../../components/blog/ArticleList.astro";

import { getCollection, type CollectionEntry } from "astro:content";
import type { GetStaticPaths } from "astro";

interface Props {
  posts: CollectionEntry<"blog">[];
}

export const getStaticPaths: GetStaticPaths = async () => {
  const allPosts = await getCollection("blog");
  const uniqueCategories = [
    ...new Set(allPosts.map((post) => post.data.categories).flat()),
  ].filter((c): c is string => Boolean(c));

  if (allPosts.some((p) => !p.data.categories)) {
    uniqueCategories.push("uncategorized");
  }

  const categories = [...new Set(uniqueCategories)];

  return categories.map((category) => {
    const filteredPosts = allPosts.filter((post) => {
      const postCats = post.data.categories || ["uncategorized"];
      return postCats.includes(category);
    });

    filteredPosts.sort(
      (a, b) =>
        new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
    );

    return {
      params: { category },
      props: { posts: filteredPosts },
    };
  });
};

const { category } = Astro.params;
const { posts } = Astro.props;

const listItems = posts.map((post) => ({
  name: post.data.title,
  url: new URL(`/blogs/${post.slug}`, SITE.url).href,
  image: post.data.image,
  description: post.data.desc,
}));

import { SITE } from "../../config";
---

<Layout title={`Category: ${category}`} items={listItems}>
  <div class="pt-24 pb-20 px-6 max-w-7xl mx-auto min-h-screen">
    <header class="text-center space-y-6 mb-16">
      <div
        class="inline-block px-3 py-1 text-sm text-blue-400 bg-blue-500/10 rounded-full mb-4"
      >
        Category
      </div>
      <h1
        class="text-4xl md:text-5xl font-bold text-white leading-tight capitalize"
      >
        {category}
      </h1>
      <p class="text-xl text-gray-400">
        Found {posts.length} article{posts.length !== 1 ? "s" : ""}
      </p>
    </header>

    <ArticleList items={posts.map((p) => ({ type: "single", article: p }))} />
  </div>
</Layout>
