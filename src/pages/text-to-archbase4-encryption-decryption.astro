---
import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/SectionHeader.astro"; // We need to create this or inline it
import Text2Arch from "../components/react/Text2Arch.jsx";
import { ArrowRight } from "lucide-react";

const customTitle = "Text2Arch Tool - Mozi's Website";
const customDescription =
  "A simple encryption and decryption tool. Enter your text below to convert it to the custom ArchBase4 format.";
const customImage = "/assets/text-to-archbase4-encryption-decryption.webp";
---

<Layout title={customTitle} description={customDescription} image={customImage}>
  <div class="pt-12 pb-20 px-6">
    <SectionHeader title="Text to ArchBase4">
      <p class="text-gray-400 max-w-xl mx-auto">
        A simple encryption and decryption tool. Enter your text below to
        convert it to the custom ArchBase4 format.
      </p>
    </SectionHeader>

    <Text2Arch client:load />
    <!-- client:load is crucial for hydration -->

    <div
      class="mt-20 max-w-2xl mx-auto border border-white/10 rounded-2xl p-8 bg-white/5 backdrop-blur-sm text-center"
    >
      <h2 class="text-2xl font-semibold text-white mb-4">
        âœ¨ Modern professional tools released
      </h2>
      <p class="text-gray-400 mb-8 leading-relaxed">
        We have transformed Text2Arch into a brand new, professional independent
        Web application. The new version provides much more powerful text
        processing capabilities, a more beautiful interface, and optimized
        encryption algorithms.
      </p>
      <a
        href="https://text2arch.mozi1924.com/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-3 rounded-full bg-blue-600 hover:bg-blue-500 text-white font-medium transition-all transform hover:scale-105"
      >
        Experience the professional version
        <ArrowRight className="w-5 h-5" />
      </a>
    </div>
  </div>
</Layout>
