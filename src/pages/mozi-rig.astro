---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mozi's Rig - Mozi's Website">
    <div class="relative pt-20 pb-32 px-6 overflow-hidden">
        <!-- Background Elements -->
        <div
            class="absolute top-0 left-0 w-full h-[500px] bg-gradient-to-b from-blue-900/20 to-transparent pointer-events-none"
        >
        </div>

        <div
            class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-12 items-center relative z-10"
        >
            <div class="space-y-8">
                <div
                    class="inline-block px-4 py-1.5 bg-blue-500/10 text-blue-400 text-sm font-semibold rounded-full"
                >
                    v2.0 Coming soon ðŸ¤«
                </div>
                <h1
                    class="text-5xl md:text-6xl font-bold text-white leading-tight"
                >
                    The Ultimate <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500"
                        >Minecraft Rig</span
                    >
                </h1>
                <p class="text-xl text-gray-300 leading-relaxed max-w-xl">
                    Create stunning Minecraft animations in Blender with fully
                    customizable facial expressions, intuitive controls, and
                    optimized performance.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a
                        href="https://store.mozi1924.com/l/rig-one"
                        class="px-8 py-4 bg-white text-black font-bold rounded-xl hover:bg-gray-200 transition-colors shadow-lg shadow-white/10"
                    >
                        Download Now
                    </a>
                    <a
                        href="https://rig-doc.mozi1924.com/"
                        class="px-8 py-4 bg-[#333] text-white font-bold rounded-xl hover:bg-[#444] transition-colors border border-white/10"
                    >
                        View Documentation
                    </a>
                </div>

                <div
                    class="pt-8 border-t border-white/10 grid grid-cols-3 gap-8 text-center lg:text-left"
                >
                    <div>
                        <div class="text-2xl font-bold text-white">5k+</div>
                        <div class="text-sm text-gray-500">Downloads</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-white">4.9/5</div>
                        <div class="text-sm text-gray-500">Rating</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-white">Free</div>
                        <div class="text-sm text-gray-500">Updates</div>
                    </div>
                </div>
            </div>

            <div class="relative">
                <div
                    class="relative aspect-square rounded-2xl overflow-hidden border border-white/10 bg-[#222] shadow-2xl"
                >
                    <!-- Placeholder for Rig Showcase -->
                    <div
                        class="absolute inset-0 flex items-center justify-center text-gray-600 bg-[#161616]"
                    >
                        <video
                            src="/assets/rig-one.mp4"
                            class="w-full h-full object-cover"
                            autoplay
                            loop
                            muted
                        />
                    </div>
                </div>
                <!-- Decoration -->
                <div
                    class="absolute -z-10 -bottom-12 -right-12 w-64 h-64 bg-purple-500/20 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute -z-10 -top-12 -left-12 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl"
                >
                </div>
            </div>
        </div>
    </div>
</Layout>
