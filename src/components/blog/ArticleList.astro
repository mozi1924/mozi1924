---
import { FileText, ArrowRight, Layers, Calendar } from "lucide-react";
import type { ArticleItem } from "../../utils/article";
import { format } from "date-fns";

interface Props {
    items: ArticleItem[]; // Using the unified ArticleItem type
    mode?: "grid" | "list";
    showIndex?: boolean;
}

const { items, mode = "grid", showIndex = false } = Astro.props;
---

<div
    class={mode === "grid"
        ? "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
        : "flex flex-col gap-4"}
>
    {
        items.map((item, index) => {
            if (item.type === "series") {
                // Series Styling
                return (
                    <div
                        class={`group relative select-none transition-all duration-300 ${mode === "grid" ? "h-full hover:-translate-y-2" : "mb-3"}`}
                    >
                        {/* Series Stack Layers (Order swapped for correct z-index: Main > Mid > Bottom) */}
                        {/* Bottom Layer */}
                        <div class="absolute inset-x-2 md:inset-x-0 inset-y-0 translate-y-4 md:translate-y-4 md:translate-x-2 bg-[#1a1a1a] rounded-xl md:rounded-2xl border border-white/5 md:border-white/10 transform transition-all group-hover:translate-y-6 md:group-hover:translate-y-6 md:group-hover:translate-x-4 duration-300 opacity-40 md:opacity-100 z-0" />
                        {/* Middle Layer */}
                        <div class="absolute inset-x-1 md:inset-x-0 inset-y-0 translate-y-2 md:translate-y-2 md:translate-x-1 bg-[#1a1a1a] rounded-xl md:rounded-2xl border border-white/5 md:border-white/10 transform transition-all group-hover:translate-y-3 md:group-hover:translate-y-3 md:group-hover:translate-x-2 duration-300 opacity-70 md:opacity-100 z-1" />

                        <a
                            href={`/article/${item.slug}`}
                            class={`relative flex h-full bg-[#1a1a1a] rounded-xl md:rounded-2xl overflow-hidden border border-white/10 group-hover:border-blue-500/50 shadow-xl z-10
                                ${mode === "grid" ? "flex-row md:flex-col p-4 md:p-0" : "flex-row items-center p-4 md:p-0"}`}
                        >
                            <div
                                class={`relative overflow-hidden bg-[#222] flex-shrink-0
                                ${mode === "grid" ? "hidden md:block w-full aspect-video" : "hidden md:block w-64 aspect-video"}`}
                            >
                                {item.metadata.data.image ? (
                                    <img
                                        src={item.metadata.data.image}
                                        alt={item.metadata.data.title}
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center text-gray-700">
                                        <Layers className="w-8 md:w-12 h-8 md:h-12" />
                                    </div>
                                )}
                                <div class="hidden md:block absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60" />
                                <div class="absolute top-2 left-2 md:top-4 md:left-4">
                                    <div class="flex items-center gap-1.5 text-[8px] md:text-[10px] uppercase tracking-widest text-blue-400 bg-black/80 md:bg-black/60 backdrop-blur-md px-1.5 py-0.5 md:px-2 md:py-1 rounded border border-blue-500/20 font-bold">
                                        <Layers className="w-2.5 h-2.5 md:w-3 md:h-3" />
                                        <span>Series</span>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-1 flex flex-col justify-start min-w-0 p-0 md:p-6 text-left">
                                <div class="flex items-center gap-3 text-xs md:text-sm text-gray-500 mb-1 md:mb-2 font-mono">
                                    <div class="flex items-center gap-2">
                                        <Calendar className="w-3 h-3" />
                                        <span class="hidden md:inline">
                                            {format(
                                                item.createDate,
                                                "MMM d, yyyy",
                                            )}
                                        </span>
                                        <span class="md:hidden">
                                            {format(item.createDate, "MMM d")}
                                        </span>
                                    </div>
                                    <div class="flex items-center gap-1.5 text-blue-400/80">
                                        <FileText className="w-3 h-3" />
                                        <span>{item.posts.length} Parts</span>
                                    </div>
                                </div>

                                <h2 class="text-base md:text-xl font-bold text-white mb-1 md:mb-2 group-hover:text-blue-400 transition-colors line-clamp-2 leading-tight md:leading-snug">
                                    {item.metadata.data.title}
                                </h2>

                                <p class="text-gray-400 text-xs md:text-sm line-clamp-2 md:line-clamp-2 mb-2 md:mb-4">
                                    {item.metadata.data.desc}
                                </p>

                                <div class="flex items-center text-[10px] md:text-sm font-bold text-blue-400 mt-auto">
                                    <span class="flex items-center group-hover:translate-x-1 transition-transform">
                                        Start Reading
                                        <ArrowRight className="w-3 h-3 md:w-4 md:h-4 ml-1" />
                                    </span>
                                </div>
                            </div>

                            <div class="md:hidden w-24 h-24 sm:w-32 sm:h-32 flex-shrink-0 rounded-xl overflow-hidden border border-white/10 ml-4 self-center relative">
                                {item.metadata.data.image ? (
                                    <img
                                        src={item.metadata.data.image}
                                        alt={item.metadata.data.title}
                                        class="w-full h-full object-cover"
                                    />
                                ) : (
                                    <div class="w-full h-full bg-[#222] flex items-center justify-center text-gray-800">
                                        <Layers className="w-6 h-6" />
                                    </div>
                                )}
                                <div class="absolute top-1 left-1 bg-blue-500/80 rounded px-1 py-0.5 text-[8px] text-white font-bold flex items-center gap-1">
                                    <Layers className="w-2 h-2" />
                                    Series
                                </div>
                            </div>
                        </a>
                    </div>
                );
            } else {
                // Single Article Case
                const data = item.article.data;
                const slug =
                    item.article.collection === "blog"
                        ? `/blogs/${item.article.slug}`
                        : `/article/${item.article.slug}`;
                const isBlog = item.article.collection === "blog";
                const seriesIndex =
                    "seriesIndex" in data ? data.seriesIndex : undefined;

                return (
                    <a
                        href={slug}
                        class={`group flex bg-[#1a1a1a] rounded-xl md:rounded-2xl overflow-hidden border border-white/5 hover:border-blue-500/30 transition-all shadow-sm h-full
                            ${mode === "grid" ? "flex-row md:flex-col hover:-translate-y-2 hover:shadow-2xl p-4 md:p-0" : "flex-row items-center p-4 md:p-0"}
                        `}
                    >
                        {/* Index Indicator for Series Chapters in List Mode */}
                        {showIndex && mode === "list" && (
                            <div class="hidden md:flex flex-shrink-0 items-center justify-center w-12 h-12 ml-6 rounded-full bg-white/5 text-gray-400 group-hover:bg-blue-500/20 group-hover:text-blue-400 transition-colors font-mono text-base font-bold">
                                {seriesIndex || index + 1}
                            </div>
                        )}

                        {/* Desktop Image part */}
                        <div
                            class={`relative overflow-hidden bg-[#222] flex-shrink-0
                            ${mode === "grid" ? "hidden md:block w-full aspect-video" : "hidden md:block w-64 aspect-video"}
                        `}
                        >
                            {data.image ? (
                                <img
                                    src={data.image}
                                    alt={data.title}
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                />
                            ) : (
                                <div class="w-full h-full flex items-center justify-center text-gray-700">
                                    <FileText className="w-12 h-12" />
                                </div>
                            )}
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60" />
                        </div>

                        {/* Text Content */}
                        <div class="flex-1 flex flex-col justify-start min-w-0 p-0 md:p-6 text-left">
                            <div class="flex items-center gap-3 text-xs md:text-sm text-gray-500 mb-1 md:mb-2 font-mono">
                                <div class="flex items-center gap-2">
                                    <Calendar className="w-3 h-3" />
                                    <span class="hidden md:inline">
                                        {format(
                                            new Date(data.date),
                                            "MMM d, yyyy",
                                        )}
                                    </span>
                                    <span class="md:hidden">
                                        {format(new Date(data.date), "MMM d")}
                                    </span>
                                </div>
                                {isBlog && (
                                    <span class="text-blue-500/50">â€¢ Blog</span>
                                )}
                            </div>

                            <h2 class="text-base md:text-xl font-bold text-white mb-1 md:mb-2 group-hover:text-blue-400 transition-colors line-clamp-2 leading-tight md:leading-snug">
                                {data.title}
                            </h2>

                            <p class="text-gray-400 text-xs md:text-sm line-clamp-2 md:line-clamp-2 mb-2 md:mb-4">
                                {data.desc}
                            </p>

                            <div class="flex items-center text-[10px] md:text-sm font-bold text-blue-400 mt-auto">
                                <span class="flex items-center group-hover:translate-x-1 transition-transform">
                                    {isBlog ? "Read Post" : "Read Article"}
                                    <ArrowRight className="w-3 h-3 md:w-4 md:h-4 ml-1" />
                                </span>
                            </div>
                        </div>

                        {/* Mobile Image (Right Side) */}
                        <div class="md:hidden w-24 h-24 sm:w-32 sm:h-32 flex-shrink-0 rounded-xl overflow-hidden border border-white/10 ml-4 self-center">
                            {data.image ? (
                                <img
                                    src={data.image}
                                    alt={data.title}
                                    class="w-full h-full object-cover"
                                />
                            ) : (
                                <div class="w-full h-full bg-[#222] flex items-center justify-center text-gray-800">
                                    <FileText className="w-6 h-6" />
                                </div>
                            )}
                        </div>
                    </a>
                );
            }
        })
    }
</div>
