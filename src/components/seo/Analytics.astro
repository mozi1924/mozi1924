    function gtag() {
        dataLayer.push(arguments);
    }
    gtag("js", new Date());
    gtag("config", GA_MEASUREMENT_ID);
</script>

<!-- Microsoft Clarity -->
<script define:vars={{ CLARITY_PROJECT_ID }} is:inline>
