---
import { Github, Twitter, Youtube, Mail } from "lucide-react";
---

<div
  class="bg-[#1a1a1a] rounded-2xl border border-white/10 p-6 flex flex-col items-center text-center shadow-xl"
>
  <!-- Avatar -->
  <div class="relative w-32 h-32 mb-4 group">
    <div
      class="absolute inset-0 bg-blue-500 rounded-full blur opacity-20 group-hover:opacity-40 transition-opacity duration-500"
    >
    </div>
    <img
      src="https://github.com/mozi1924.png"
      alt="Mozi Avatar"
      class="relative w-full h-full rounded-full object-cover border-2 border-white/10 group-hover:border-blue-500/50 transition-colors duration-300"
    />
  </div>

  <!-- Name & Motto -->
  <h2 class="text-2xl font-bold text-white mb-2">Mozi</h2>
  <p class="text-gray-400 text-sm mb-6 leading-relaxed">
    I don't care if these bitches don't like me Cause, like, I'm pretty as fuck.
  </p>

  <!-- Divider -->
  <div class="w-full h-px bg-white/10 mb-6"></div>

  <!-- Social Links -->
  <div class="flex flex-col w-full gap-3">
    <a
      href="https://github.com/mozi1924"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
    >
      <div class="text-gray-400 group-hover:text-white transition-colors">
        <Github className="w-5 h-5" />
      </div>
      <span class="text-sm text-gray-300 font-medium group-hover:text-white"
        >GitHub</span
      >
    </a>

    <a
      href="https://twitter.com/CyberMozi"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
    >
      <div class="text-gray-400 group-hover:text-[#1DA1F2] transition-colors">
        <Twitter className="w-5 h-5" />
      </div>
      <span class="text-sm text-gray-300 font-medium group-hover:text-white"
        >Twitter</span
      >
    </a>

    <a
      href="https://www.youtube.com/@moziarasaka"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
    >
      <div class="text-gray-400 group-hover:text-red-500 transition-colors">
        <Youtube className="w-5 h-5" />
      </div>
      <span class="text-sm text-gray-300 font-medium group-hover:text-white"
        >YouTube</span
      >
    </a>

    <a
      href="mailto:mozi1924@arasaka.ltd"
      rel="noopener noreferrer"
      class="flex items-center gap-3 p-3 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
    >
      <div class="text-gray-400 group-hover:text-blue-400 transition-colors">
        <Mail className="w-5 h-5" />
      </div>
      <span class="text-sm text-gray-300 font-medium group-hover:text-white"
        >Email</span
      >
    </a>
  </div>
</div>
